<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPhepTinh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="start"
            android:gravity="end"
            android:maxLines="10"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:text=""
            android:textColor="#424242"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvKetQua"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="0"
            android:textColor="#212121"
            android:textSize="56sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"

        android:orientation="vertical"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="5"
            android:rowCount="5">


            <Button
                android:id="@+id/button_open_parenthesis"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="("
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_close_parenthesis"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text=")"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_percent"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_rounded"
                android:onClick="onClick"
                android:text="%"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_power"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="^"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_sqrt"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="√"
                android:textSize="30sp"
                app:backgroundTint="@null" />


            <Button
                android:id="@+id/button_7"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="7"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_8"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="8"
                app:backgroundTint="@null" />
            <Button
                android:id="@+id/button_9"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="9"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_nhan"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="÷"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button

                android:id="@+id/button_del"
                style="@style/CalculatorButton.Function"
                android:background="@drawable/button_ope"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="DE"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />


            <Button
                android:id="@+id/button_4"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="4"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_5"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="5"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_6"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="6"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_mul"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="×"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_AC"
                style="@style/CalculatorButton.Function"
                android:background="@drawable/button_ope"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_1"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="1"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_2"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="2"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_3"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="3"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_tru"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="-"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_bang"
                style="@style/CalculatorButton.Equals"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="="
                android:textSize="30sp"
                app:backgroundTint="@null" />


            <Button
                android:id="@+id/button_0"
                style="@style/CalculatorButton.Number"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="start|fill_horizontal"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="0"

                app:backgroundTint="@null" />


            <Button
                android:id="@+id/button_phay"
                style="@style/CalculatorButton.Number"
                android:background="@drawable/button"
                android:onClick="onClick"
                android:text="."
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button_cong"
                style="@style/CalculatorButton.Operator"
                android:background="@drawable/button_ope"
                android:onClick="onClick"
                android:text="+"
                android:textSize="30sp"
                app:backgroundTint="@null" />


        </GridLayout>

    </LinearLayout>



</LinearLayout>